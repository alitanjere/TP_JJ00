<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JJOO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>
    <header>
        <nav>
            <a href='@Url.Action("Index")' class="logo"><img src="~/Images/logoJJOO.png" alt="logo"></a>
            <ul>
                <li><a href='@Url.Action("Historia")'>Historia</a></li>
                <li><a href='@Url.Action("Deportes")'>Deportes</a></li>
                <li><a href='@Url.Action("Paises")'>Paises</a></li>
                <li><a href='@Url.Action("AgregarDeportista")'>Agregar Deportista</a></li>
                <li><a href='@Url.Action("Creditos")'>Creditos</a></li>
                <div class="lupa">
                <img src="~/Images/lupa.png" alt="logo">
                </div>
            </ul>
            
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

  
    <footer>
    <div class="footer-container">
        <div class="footer-section logi">
            <img src="~/Images/logoJJOO.png" class="olympic-logi">
        </div>
        <div class="footer-section">
            <h3>Juegos Olímpicos</h3>
            <ul>
                <li><a href="#">París 2024</a></li>
                <li><a href="#">Resultados y medallas</a></li>
                <li><a href="#">Repeticiones y resúmenes</a></li>
                <li><a href="#">Todos los Juegos Olímpicos</a></li>
            </ul>
        </div>
        <div class="footer-section">
            <h3>Olympic Channel</h3>
            <ul>
                <li><a href="#">Canales de TV</a></li>
                <li><a href="#">Eventos en vivo</a></li>
                <li><a href="#">Series Originales</a></li>
                <li><a href="#">Corporativo</a></li>
            </ul>
        </div>
        <div class="footer-section">
            <h3>Noticias</h3>
            <ul>
                <li><a href="#">Podcast</a></li>
                <li><a href="#">Temas</a></li>
            </ul>
        </div>
        <div class="footer-section">
            <h3>Explora</h3>
            <ul>
                <li><a href="#">Atletas</a></li>
                <li><a href="#">Deportes</a></li>
            </ul>
        </div>
    </div>
    <div class="footer-bottom">
        <ul>
            <li><a href="#">Comité Olímpico Internacional</a></li>
            <li><a href="#">Museo</a></li>
            <li><a href="#">Tienda</a></li>
            <li><a href="#">Sobre nosotros</a></li>
            <li><a href="#">Centro de contacto</a></li>
            <li><a href="#">Mapa del sitio</a></li>
            <li><a href="#">Trabaja con nosotros</a></li>
        </ul> 
        <p>&copy TP_JJOO - Jusid, Zolotow</p>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
