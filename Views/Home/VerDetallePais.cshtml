<!--Inicio Info Pais-->
<div class= "heroPais">
<img src= "~/Images/@ViewBag.FotoPais">
<h1>@ViewBag.NombrePais | </h1>
        <h3>Fundado en @ViewBag.FechaPais.Year/@ViewBag.FechaPais.Month/@ViewBag.FechaPais.Day</h3></div>
<!--Fin Info Pais-->
<!--Inicio Deportistas-->
<div class="Titulos"><h1>Deportistas de @ViewBag.NombrePais</h1></div>
<div class="Deportistas">

@foreach(Deportista miDepor in ViewBag.DeportistasPorPais){
    <div class="card" style="width: 18rem;">
        <img src="@miDepor.Foto" class="card-img-top" alt="...">
        <div class="card-body">
            <h4 class="card-title">@miDepor.Nombre @miDepor.Apellido</h4>
            <a href='@Url.Action("VerDetalleDeportista", new{IdDeportista = @miDepor.IdDeportista})' class="btn btn-dark">Ver m√°s</a>
        </div>
    </div>
}

</div>
<!--Fin Deportistas-->
