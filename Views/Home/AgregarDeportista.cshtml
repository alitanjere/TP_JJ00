<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class= "heroPais">
<img src= "@ViewBag.FotoPais"></div>
<form action= '@Url.Action("GuardarDeportista")' method="post">
    <h1>Ingrese otro deportista</h1>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label" >Nombre</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="Nombre" required placeholder="Ingrese su nombre">
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Apellido</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="Apellido" required placeholder="Ingrese su apellido">
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Fecha de nacimiento</label>
    <div class="col-sm-10">
      <input type="date" class="form-control" name="FechaNacimiento" required>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Foto</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="Foto" placeholder="Ingrese la url" required>
    </div>
  </div>
  <div class="mb-3">
      <legend for="disabledSelect" class="form-label">Deporte</legend>
      <select id="disabledSelect" class="form-select" name="IdDeporte">
    <option value="" selected>Elige un Deporte</option>

    @foreach(Deporte dep in @ViewBag.ListaDeportes){
    <option value="@dep.IdDeporte"  required>@dep.Nombre</option> 
    }      
    </select>
    </div>
    <div class="mb-3">
      <legend for="disabledSelect" class="form">Pais</legend>
      <select id="disabledSelect" class="form-select"name = "IdPais">
    <option value="" selected>Elige un Pais</option>

    @foreach(Pais miPais in @ViewBag.ListaPaises){
        <option value="@miPais.IdPais"  required>@miPais.Nombre</option> 
    }      </select>
  </div>
  <input type="submit" class="btn btn-dark">
  <input type="reset" class="btn btn-dark">

</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
